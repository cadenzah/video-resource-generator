{
  "name": "vrg",
  "version": "1.0.0",
  "description": "Meta-Resource generator from original video sources",
  "main": "build/src/server.js",
  "scripts": {
    "start": "node build/src/server",
    "build-watch": "npx tsc -w",
    "test": "npx jest --coverage --watchAll --detectOpenHandles --forceExit",
    "test-watch": "npx jest --watch --coverage --detectOpenHandles --forceExit"
  },
  "author": "cadenzah",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "jest": "^26.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/supertest": "^2.0.10",
    "express": "^4.17.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  }
}
